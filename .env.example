# Form Analyst Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===== Main Application =====
SECRET_KEY=
ADMIN_PASSWORD=
DATABASE_URL=

# ===== Betfair Integration =====
# Set to 'true' to enable Betfair live odds (default: false)
BETFAIR_ENABLED=false

# Betfair API credentials (required if BETFAIR_ENABLED=true)
BETFAIR_USERNAME=
BETFAIR_PASSWORD=
BETFAIR_APP_KEY=

# Certificate authentication (choose ONE method):
# Option 1: Base64-encoded PEM content (recommended for Railway/cloud deployment)
BETFAIR_PEM_B64=
# Option 2: Path to local PEM file
BETFAIR_PEM=
# Option 3: Directory containing certificate files
BETFAIR_CERT_DIR=

# Market configuration
# Comma-separated list of Betfair market IDs to monitor
BETFAIR_MARKET_IDS=

# Polling interval in seconds (default: 2)
BETFAIR_POLL_INTERVAL=2

# Betfair TLD: .com.au for Australia, .com for UK/international
BETFAIR_TLD=.com.au

# URL for the Betfair service (for main app to communicate with the service)
BETFAIR_SERVICE_URL=http://localhost:5001

# ===== Port Configuration =====
# Main app port (default: 8080)
PORT=8080
