# Betfair Service Environment Variables (DO NOT commit real values)
# Copy this file to .env and fill in your credentials

# Flask app secret
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=sqlite:///formanalyst.db

# Admin password
ADMIN_PASSWORD=changeme123

# ===== Betfair Integration =====
# IMPORTANT: Set BETFAIR_ENABLED=true to activate the Betfair service
BETFAIR_ENABLED=false

# Betfair API credentials
BETFAIR_USERNAME=
BETFAIR_PASSWORD=
BETFAIR_APP_KEY=

# Optional: Base64-encoded PEM certificate for cert-login
# To create: base64 -w0 your-cert.pem
BETFAIR_PEM_B64=

# Top-level domain for Betfair API (com for international, com.au for Australia)
BETFAIR_TLD=com

# Polling interval in seconds
BETFAIR_POLL_INTERVAL=2

# Optional: Comma-separated list of market IDs to poll (for testing)
# Leave empty to use market IDs from database Race.market_id
BETFAIR_MARKET_IDS=

# Port for Betfair service (Railway compatibility)
PORT=8081
