# The Form Analyst - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
DATABASE_URL=sqlite:///formanalyst.db
ADMIN_PASSWORD=changeme123

# Betfair Integration (Optional)
# Set BETFAIR_ENABLED=true to enable live odds and results
BETFAIR_ENABLED=false
BETFAIR_USERNAME=
BETFAIR_PASSWORD=
BETFAIR_APP_KEY=

# Optional: Base64-encoded PEM certificate for cert-based login
# Generate with: base64 -i your_cert.pem | tr -d '\n'
BETFAIR_PEM_B64=

# Optional: Comma-separated list of market IDs to poll
# If empty, the service will poll markets from mapped races in the database
BETFAIR_MARKET_IDS=

# Optional: Polling interval in seconds (default: 2)
BETFAIR_POLL_INTERVAL=2

# Optional: Betfair TLD (default: com, use com.au for Australia)
BETFAIR_TLD=com

# Optional: Directory to save raw market payloads (disabled by default)
# BETFAIR_PAYLOAD_DIR=./betfair_payloads

# Port for betfair_service.py (default: 5001)
# The main app uses PORT for its server
PORT=5001
