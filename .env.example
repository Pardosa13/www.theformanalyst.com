# Form Analyst Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
DATABASE_URL=sqlite:///formanalyst.db
ADMIN_PASSWORD=changeme123

# Betfair Integration (Optional - disabled by default)
# Set BETFAIR_ENABLED=true to activate live odds polling
BETFAIR_ENABLED=false

# Betfair API Credentials (required if BETFAIR_ENABLED=true)
BETFAIR_USERNAME=
BETFAIR_PASSWORD=
BETFAIR_APP_KEY=

# Optional: Base64-encoded PEM certificate for cert-based login
# Generate with: base64 -w0 your-cert.pem
BETFAIR_PEM_B64=

# Optional: Comma-separated list of Betfair market IDs to poll
# Leave empty to auto-detect from database
BETFAIR_MARKET_IDS=

# Polling interval in seconds (default: 2)
BETFAIR_POLL_INTERVAL=2

# Betfair API TLD - use 'com.au' for Australia, 'com' for UK/International
BETFAIR_TLD=com.au

# Port for the Betfair service (default: 5001)
PORT=5001
